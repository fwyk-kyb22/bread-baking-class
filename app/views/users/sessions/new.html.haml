.login_main
  .login_main__container
    %h2.user_main__container--title
      ログイン  
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      - flash.each do |name, msg| 
        = content_tag :div, msg, id: "flash_#{name}" 
      .field__email
        = f.label :email, class:"field__email--label"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class:"field__email--field",placeholder: "　例）xxx@xxx.xxx"
      .field__password
        = f.label :パスワード, class:"field__password--label"
        %span 必須
        %br/
        = f.password_field :password, autocomplete: "current-password", class:"field__password--field",placeholder: " 　6文字以上の英数字"
      .warning
        %p 
          教室の先生のアカウント（admin）は 
          %br
          email: "admin@ad.min"  
          %br
          password "111111"  です  
      .actions.login_submit
        = f.submit "ログイン", class:"login_submit--btn"
    -# = render "devise/shared/links"
    = link_to "Sign up", new_registration_path(resource_name), class: "user_link__login"
