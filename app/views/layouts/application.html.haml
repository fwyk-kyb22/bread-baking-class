      .header-menu
        %ul
          %li= link_to "Home", home_index_path ,class: "header-menu__right"
          %li= link_to "Lesson内容", "#",class: "header-menu__right"
          %li= link_to "ブログ", '#', class: "header-menu__right"
          %li= link_to "お問い合わせフォーム", new_contact_path,class: "header-menu__right"
          %li= link_to "教室の生徒さんはこちら", new_user_session_path,class: "header-menu__right"
    = yield