        let geocoder
        
        function initMap(){
          geocoder = new google.maps.Geocoder()
        
          map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: 35.171768, lng:136.882951},
            zoom: 15,
          });
        
          marker = new google.maps.Marker({
            position:  {lat: 35.171768, lng:136.882951},
            map: map
          });
        }
      %script{:async => "", :defer => "defer", :src => "https://maps.googleapis.com/maps/api/js?key=#{ ENV['API_KEY'] }&libraries=places&callback=initMap"}
