- if current_user.already_liked?(article) 
  = link_to  article_like_path(article,current_user), method: :delete , remote: true,class: "like__destory--btn" do
    = icon("fas", "heart")   
    いいね済 #{article.likes.count}
- else 
  = link_to article_likes_path(article),method: :post , remote: true,class: "like__create--btn" do
    = icon("far", "heart")   
    いいね！ #{article.likes.count}
    