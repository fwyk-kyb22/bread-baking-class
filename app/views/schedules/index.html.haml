    .schedules__comments__form    
      = form_with(model:@comment, local: true) do |form|
        = form.text_area :content , placeholder: "コメントする", rows: "2" 
        = form.submit "送信する！" 
    .schedules__comments__list
      - @comments.each do |comment|
        .schedules__comments__list--comment
          = comment.content
        .schedules__comments__list--name  
          = comment.user.name    